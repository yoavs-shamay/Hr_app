<Window x:Class="PLWPF.ViewTabs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="View" Style="{StaticResource WindowStyle}" Width="850">
    <Grid>
        <TabControl>
            <TabItem Name="EmployeeTab" Header="Employees">
                <local:EmployeeView />
            </TabItem>
            <TabItem Name="EmployersTab" Header="Employers">
                <local:EmployerView />
            </TabItem>
            <TabItem Name="SpecializationsTab" Header="Specializations">
                <local:SpecializationView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
