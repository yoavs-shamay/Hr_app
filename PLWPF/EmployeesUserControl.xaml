<Page x:Class="PLWPF.EmployeesUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLWPF"
      mc:Ignorable="d" 
      Style="{StaticResource PageStyle}"
      Title="Employees">

    <Grid>
        <StackPanel Style="{StaticResource GenericThreeButtons}">
            <Button Style="{StaticResource ButtonStyle}" Content="Add" />
            <Button Style="{StaticResource ButtonStyle}" Content="Edit" Margin="0,38,0,0"/>
            <Button Style="{StaticResource ButtonStyle}" Content="Remove" Margin="0,38,0,0"/>
        </StackPanel>
    </Grid>
</Page>
